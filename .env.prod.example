# Production Environment Variables
# Copy this file to .env.prod and fill in the actual values

# Django settings
SECRET_KEY=your-very-long-and-secure-secret-key-here
DEBUG=0
DJANGO_ENV=production
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Database
POSTGRES_DB=muadhin_db
POSTGRES_USER=muadhin_user
POSTGRES_PASSWORD=your-secure-database-password

# Email settings
EMAIL_HOST_USER=your-email@domain.com
EMAIL_HOST_PASSWORD=your-email-password

# Twilio configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number
TWILIO_WHATSAPP_NUMBER=your-twilio-whatsapp-number

# Africa's Talking configuration
AFRICASTALKING_USERNAME=your-username
AFRICASTALKING_API_KEY=your-api-key
AFRICASTALKING_PHONE_NUMBER=your-phone-number
AFRICASTALKING_CALLER_ID=your-caller-id

# Domain configuration
DOMAIN=your-domain.com

# Flower monitoring (optional)
FLOWER_USER=admin
FLOWER_PASSWORD=secure-flower-password

# Additional security (optional)
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem